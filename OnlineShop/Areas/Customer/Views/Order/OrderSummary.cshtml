@using OnlineShop.Models
@model IEnumerable<OrderDetailsVM>
@{
    ViewData["Title"] = "Cart";
}

<h4>Order Details</h4>

<br/>
<div class="row">
    <table class="table table-bordered" id="myTable">
        <thead>
        <tr>
            <th>Customer Name</th>
            <th>Phone Number</th>
            <th>Mailing Address</th>
            <th>Email</th>
            <th>OrderDate</th>
            <th>Quantity</th>
            <th>Total Price</th>

             @if(User.IsInRole("Super User") || User.IsInRole("Admin"))
                    {
            <th>Order No.</th>
                    }

            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr> 
                <td>@item.Name</td>
                <td>@item.PhoneNo</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.OrderDate</td>
                <td>@item.Quantity</td>
                <td>@item.TotalPrice</td>
                    @if(User.IsInRole("Super User") || User.IsInRole("Admin"))
                    {
                <td>@item.OrderNo</td>
                        
                    }
                <td>
                    <a asp-area="Customer" asp-action="OrderSingleDetails" asp-controller="Order" class="btn btn-success" asp-route-id="@item.Id">
                        <i class="fas fa-eye"></i> Details</a>
                </td>
                    @if (@item.DeliverNotDeliver == true)
                    {
                        <td style="color:grey"> 
                       Already Delivered
                        </td>
                    }
                    else
                    {
                         <td style="color:red;"> 
                       Not Delivered Yet
                        </td>
                    }

            </tr>
        }

        


        </tbody>
    </table>
</div>
 


@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    
    <script type="text/javascript">
        $(document).ready( function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip', 
                buttons: [
                //    'pageLength','copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        } );
        $(function(){
            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit!='') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.error(del);
            }
        })
    </script>
}