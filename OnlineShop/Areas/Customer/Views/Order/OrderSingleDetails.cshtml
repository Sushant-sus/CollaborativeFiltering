@model OnlineShop.Models.OrderDetailsVM
@{
    ViewData["Title"] = "Details";
}
<br />

<h2 class="text-info">Orders Details</h2>
@if (Model.DeliverNotDeliver == true)
{
    <h2 style="align-content:center;color:indianred;" class="">Products Delivered Already on @Model.DeliveredDate.ToShortDateString()</h2>

}
else
{
<h2 class="" style="color:darkslategrey;">Product Is On Way to Delivered</h2>
    
}
<div class="p-4 rounded border row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label>Customer Name</label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductName" readonly="readonly" class="form-control" />
                </div>
            </div> 
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Address" readonly="readonly" readonly="readonly" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" readonly="readonly" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhoneNo"></label>
                </div>
                <div class="col-8">
                    @*<select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-control"></select>*@
                    <input asp-for="PhoneNo" readonly="readonly" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="OrderDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderDate" disabled="disabled" class="" type="date" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Quantity"></label>
                </div>
                <div class="col-8">
                    @*<select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-control"></select>*@
                    <input asp-for="Quantity" readonly="readonly" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TotalPrice"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TotalPrice" disabled="disabled" class="" type="number" />
                </div>
            </div>
            
        </div>
        

    </div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

